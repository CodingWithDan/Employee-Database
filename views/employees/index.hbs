<h1>Employees</h1>
<div class="row">
    {{#each employees}}
    <div class="col s12 m4">
        <div class="card">
            <div class="card-image">
                {{{editIcon user ../user _id}}}
            </div>
            <div class="card-content center-align">
                <h5>{{fullName}}</h5>
                <span>{{title}}</span> <br>
                <br>
            </div>
            <div class="card-action center-align">
                <a href="/employees/{{_id}}" class="btn grey">Read More</a>
            </div>
        </div>
    </div>
    {{else}}
    <p>None to display</p>
    {{/each}}
</div>